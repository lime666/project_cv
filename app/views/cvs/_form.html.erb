<%= form_for @cv do |f| %>

  <div class="form-group">
    <%= f.label :user_name %>
    <%= f.text_field :user_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :user_email %>
    <%= f.text_field :user_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :education %>
    <%= f.text_area :education, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :experience %>
    <%= f.text_area :experience, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :about %>
    <%= f.text_area :about, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Save all', class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>